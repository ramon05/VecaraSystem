@model EditarRoleModel

@{
	ViewData["Title"] = "EditarRole";
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Editar Role";
}

<h1>Editar Role</h1>

<form method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="Id" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Id" disabled class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="NombreRole" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="NombreRole" class="form-control">
			<span asp-validation-for="NombreRole" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Update</button>
			<a asp-action="ListaRoles" class="btn btn-primary">Cancel</a>
		</div>
	</div>

	<div class="card">
		<div class="card-header">
			<h3>Usuarios En Este Rol</h3>
		</div>
		<div class="card-body">
			@if (Model.Users.Any())
			{
				foreach (var user in Model.Users)
				{
					<h5 class="card-title">@user</h5>
				}
			}
			else
			{
				<h5 class="card-title">Ninguno por el momento</h5>
			}
		</div>
		<div class="card-footer">
			<a asp-action="EditarUsuarioEnRol" asp-controller="Roles" asp-route-roleId="@Model.Id"
			   class="btn btn-primary" style="width:auto">Agregar o eliminar usuarios de este rol</a>
		</div>
	</div>
</form>

